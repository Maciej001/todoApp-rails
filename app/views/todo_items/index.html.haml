.container 
	%section#todoapp
		%header#header
			%h1 todos

			/ %input#new-todo{placeholder: "New task"}
			
			= form_for TodoItem.new, method: :post, remote: true do |f|
				= f.text_field :title, id: 'new-todo', placeholder: "What's needs to be done?", autofocus: true
				= f.submit

		%section#main
			%ul#todo_list
				= render partial: "item", collection: @todo_items

		%footer#footer
			%button#clear_completed Clear completed